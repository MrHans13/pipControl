#: set bg_test 1, 0, 0, 1
#: set bg_dark (13/255, 13/255, 13/255, 1)
#: set bg_light (25/255, 25/255, 25/255, 1)
#: set bg_slight (35/255, 35/255, 35/255, 1)
#: set bg_but_help_n (5/255, 5/255, 5/255, 0.3)

<LinkLabel>:
    markup: True

<LabDark@Label>:
    canvas.before:
        Color:
            rgba: bg_dark
        Rectangle:
            size: self.size
            pos: self.pos
    color: 1,1,1,0.5
    height: "30sp"
    size_hint:(1,None)

<Logo@Image>:
    source: "pics/logo-fl-tech.png"
    size_hint: (1,1)

<ButRound@Button>:
    background_color: 0,0,0,0
    canvas.before:
        Color:
            rgba: app.act_b_col_n if self.state == 'normal' else app.act_b_col_d
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: (15,)

<ButHelp@Button>:
    canvas.before:
        Color:
            rgba: app.act_b_col_d if self.state == 'normal' else app.act_b_col_n
        Ellipse:
            size: self.size
            pos: self.pos
    markup: True
    text: "[b]?[/b]"
    background_color: 0,0,0,0

<ButLanguage@Button>:
    background_color: 0,0,0,0

<ActionGrid@GridLayout>:
    canvas.before:
        Color:
            rgba: bg_dark
        Rectangle:
            size: self.size
            pos: self.pos
    cols: 2


<BoxBgTest@BoxLayout>:
    canvas.before:
        Color:
            rgba: bg_test
        Rectangle:
            size: self.size
            pos: self.pos

<BoxBgDark@BoxLayout>:
    canvas.before:
        Color:
            rgba: bg_dark
        Rectangle:
            size: self.size
            pos: self.pos

<BoxBgLight@BoxLayout>:
    canvas.before:
        Color:
            rgba: bg_light
        Rectangle:
            size: self.size
            pos: self.pos

<BoxBgSlight@BoxLayout>:
    canvas.before:
        Color:
            rgba: bg_slight
        Rectangle:
            size: self.size
            pos: self.pos
