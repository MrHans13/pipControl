#: set bg_test 1, 0, 0, 1
#: set bg_dark (13/255, 13/255, 13/255, 1)
#: set bg_light (25/255, 25/255, 25/255, 1)
#: set bg_slight (35/255, 35/255, 35/255, 1)
#: set bg_but_normal (0.094, 0.062, 0.239, 1)
#: set bg_but_down (0.094, 0.062, 0.239, 0.3)
#: set bg_but_help_n (5/255, 5/255, 5/255, 0.3)

<LinkLabel>:
    markup: True

<Logo@Image>:
    source: "pics/logo-fl-tech.png"
    size_hint: (1,1)

<ButRound@Button>:
    background_color: 0,0,0,0
    canvas.before:
        Color:
            rgba: bg_but_normal if self.state == 'normal' else bg_but_down
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: (15,)

<ButHelp@Button>:
    canvas.before:
        Color:
            rgba: bg_slight
        Ellipse:
            size: self.size[1], self.size[1]
            pos: self.pos
    markup: True
    text: "[b]?[/b]"
    background_color: 0,0,0,0
    size_hint: None, 1
    size: self.size[1], self.size[1]

<ButLanguage@Button>:
    background_color: 0,0,0,0

<ActionGrid@GridLayout>:
    canvas.before:
        Color:
            rgba: bg_light
        Rectangle:
            size: self.size
            pos: self.pos
    cols: 2
    rows: 2
    padding: (5,)
    spacing:5
    size_hint: (1, 0.2)


<BoxBgTest@BoxLayout>:
    canvas.before:
        Color:
            rgba: bg_test
        Rectangle:
            size: self.size
            pos: self.pos

<BoxBgDark@BoxLayout>:
    canvas.before:
        Color:
            rgba: bg_dark
        Rectangle:
            size: self.size
            pos: self.pos

<BoxBgLight@BoxLayout>:
    canvas.before:
        Color:
            rgba: bg_light
        Rectangle:
            size: self.size
            pos: self.pos

<BoxBgSlight@BoxLayout>:
    canvas.before:
        Color:
            rgba: bg_slight
        Rectangle:
            size: self.size
            pos: self.pos
