#: set bg_test 1, 0, 0, 1
#: set bg_dark (13/255, 13/255, 13/255, 1)
#: set bg_light (25/255, 25/255, 25/255, 1)
#: set bg_slight (35/255, 35/255, 35/255, 1)
#: set bg_but_help_n (5/255, 5/255, 5/255, 0.3)

<ButRound@Button>:
    canvas.before:
        Color:
            rgba: app.act_b_col_n if self.state == 'normal' else app.act_b_col_d
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: (15,)
    color: 1,1,1,0.5
    background_color: 0,0,0,0

<ButHelp@Button>:
    canvas.before:
        Color:
            rgba: app.act_b_col_d if self.state == 'normal' else app.act_b_col_n
        Ellipse:
            size: self.size
            pos: self.pos
    markup: True
    text: "[b]?[/b]"
    background_color: 0,0,0,0

<ButLanguage@Button>:
    background_color: 0,0,0,0

<LinkLabel>:
    canvas.before:
        Color:
            rgba: 0,0,0,0.2
        Rectangle:
            size: self.size
            pos: self.pos
    color: 1,1,1,0.7
    height: "25sp"
    size_hint: (1, None)
    font_size: "15sp"


<LabDark@Label>:
    canvas.before:
        Color:
            rgba: bg_dark
        Rectangle:
            size: self.size
            pos: self.pos
    color: 1,1,1,0.5

<Logo@Image>:
    source: "pics/logo-fl-tech.png"
    size_hint: (1,1)


<GridActions@GridLayout>:
    canvas.before:
        Color:
            rgba: bg_dark
        Rectangle:
            size: self.size
            pos: self.pos
    cols: 2
    height: "60sp"
    size_hint: (1, None)


<Table>:
    canvas.before:
        Color:
            rgba: bg_dark
        Rectangle:
            size: self.size
            pos: self.pos
    cols: 4
    spacing: 10

<BoxBgTest@BoxLayout>:
    canvas.before:
        Color:
            rgba: bg_test
        Rectangle:
            size: self.size
            pos: self.pos

<BoxBgDark@BoxLayout>:
    canvas.before:
        Color:
            rgba: bg_dark
        Rectangle:
            size: self.size
            pos: self.pos

<BoxBgLight@BoxLayout>:
    canvas.before:
        Color:
            rgba: bg_light
        Rectangle:
            size: self.size
            pos: self.pos

<BoxBgSlight@BoxLayout>:
    canvas.before:
        Color:
            rgba: bg_slight
        Rectangle:
            size: self.size
            pos: self.pos
