<ScrMain>:
    BoxBgDark:
        id: "box_0"
        orientation: "vertical"
        padding: 5,5,5,5
        BoxBgLight:
            id: "box_1"
            orientation: "vertical"
            padding:5,5,5,5
            spacing:5
            BoxBgDark:
                id: "box_title"
                size_hint: (1, 0.1)
                Label:
                    text: "pip Control"
                    font_size: "23sp"

            BoxBgDark:
                id: "box_middle"
                padding: (10,)
                BoxBgLight:
                    padding: (2,)
                    spacing: 2
                    BoxBgSlight:
                        id: "box_left"
                        orientation: "vertical"
                        size_hint: (0.3, 1)
                        spacing: 2
                        BoxBgDark:
                            id: "box_actions"

                            size_hint: (1, 0.1)
                            padding: (2,)
                            BoxBgSlight:
                                padding: (2,)
                                BoxBgDark:
                                    padding:(2,)
                                    Label:
                                        id: lab_actions
                        LabDark:
                            id: lab_outd_packs
                            text: "check installed packets"
                            size_hint:(1,0.1)
                        ActionGrid:
                            ButRound:
                                text: "list packets"
                                on_release: root.but_installed_func()
                            ButHelp:
                                on_press: app.show_popup(app.act_lab_txt["help_1"][app.act_lang])
                        LabDark:
                            name: "lab_li_installed"
                            color: 0,0,0,1
                            text: "list outdated packets"
                            size_hint:(1,0.1)
                        ActionGrid:
                            ButRound:
                                text: "list outdated"
                                on_release:
                                    root.but_installed_func()
                            ButHelp:
                                on_press: app.show_popup(app.act_lab_txt["help_2"][app.act_lang])
                        BoxBgDark:
                            size_hint: (1, 0.9)

                    BoxBgDark:
                        id: "box_right"
                        orientation: "vertical"
                        padding: (4,)
                        BoxBgLight:
                            id: "box_packets_title"
                            size_hint: (1, 0.075)
                            padding: (2,)
                            spacing: 2
                            BoxBgDark:
                                padding: (2,)
                                BoxBgSlight:
                                    padding: (2,)
                                    spacing: 2
                                    BoxBgDark:
                                        orientation: "vertical"
                                        spacing: 2
                                        BoxBgSlight:
                                            padding: (2,)
                                            size_hint: (1, 0.1)
                                            BoxBgDark:
                                                Label:
                                                    text: "Package"
                                        BoxBgDark:
                                            id: box_pack_names
                                            ScrollView:
                                                id: scroll
                                                GridLayout:
                                                    id: grid
                                                    cols: 1
                                                    size_hint_y: 0.5
                                    BoxBgDark:
                                        orientation: "vertical"
                                        spacing: 2
                                        size_hint: (0.3, 1)
                                        BoxBgSlight:
                                            padding: (2,)
                                            size_hint: (1, 0.1)
                                            BoxBgDark:
                                                Label:
                                                    text: "Version"
                                        Label:
                                            id: lab_version
                                    BoxBgDark:
                                        orientation: "vertical"
                                        spacing: 2
                                        size_hint: (0.3, 1)
                                        BoxBgSlight:
                                            padding: (0,2,0,4)
                                            size_hint: (1, 0.1)
                                            BoxBgDark:
                                                Label:
                                                    text: "Latest"
                                        Label:
                                            id: lab_version
                                    BoxBgDark:
                                        orientation: "vertical"
                                        spacing: 2
                                        size_hint: (0.3, 1)
                                        BoxBgSlight:
                                            padding: (2,)
                                            size_hint: (1, 0.1)
                                            BoxBgDark:
                                                Label:
                                                    text: "Type"
                                        Label:
                                            id: lab_version


            BoxBgDark:
                id: box_bottom
                padding: (2,)
                size_hint: (1, 0.05)
                Logo:
                BoxBgDark:
                BoxBgDark:
                ButRound:
                    id: but_sett
                    on_release: app.change_scr("left", "scr_sett")

