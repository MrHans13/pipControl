<ScrMain>:
    BoxBgDark:
        id: "box_0"
        orientation: "vertical"
        padding: 5,5,5,5
        BoxBgLight:
            id: "box_1"
            orientation: "vertical"
            padding:5,5,5,5
            spacing:5
            BoxBgDark:
                id: "box_title"
                height: "30sp"
                size_hint: (1, None)
                Label:
                    text: "pip Control Center"
                    font_size: "23sp"

            BoxBgDark:
                id: "box_middle"
                padding: (10,)
                BoxBgLight:
                    padding: (2,)
                    spacing: 4
                    BoxBgSlight:
                        orientation: "vertical"
                        width: "200sp"
                        size_hint: (None, 1)
                        spacing: 4
                        BoxBgDark:
                            id: "box_actions"
                            height: "40sp"
                            size_hint: (1, None)
                            BoxBgSlight:
                                BoxBgDark:
                                    Label:
                                        id: lab_actions_title
                                        color: 1,1,1,0.5
                                        font_size: "20sp"
                        LabDark:
                            id: lab_list_installed_packs
                        ActionGrid:
                            height: "60sp"
                            size_hint: (1, None)
                            padding: (4,)
                            spacing: 10
                            ButRound:
                                width: "130sp"
                                size_hint: (None, 1)
                                text: "list packets"
                                on_release: root.but_installed_func()
                            ButHelp:
                                width: "52sp"
                                size_hint: (None, 1)
                                on_release: app.show_popup(app.act_lab_txt["help_2"][app.act_lang])
                        LabDark:
                            id: lab_list_outdated
                            text: "list outdated packets"
                        ActionGrid:
                            height: "60sp"
                            size_hint: (1, None)
                            padding: (4,)
                            spacing: 10
                            ButRound:
                                text: "list outdated"
                                on_release:
                                    root.but_outdated_func()
                            ButHelp:
                                on_release: app.show_popup(app.act_lab_txt["help_2"][app.act_lang])
                        BoxBgDark:

                    BoxBgSlight:
                        name: "box_output"
                        orientation: "vertical"
                        padding: 5,5,5,5
                        BoxBgSlight:
                            name: "box_output_title"
                            height: "45sp"
                            size_hint: (1, None)
                            padding: 0,0,0,3
                            BoxBgDark:
                                BoxBgSlight:
                                    BoxBgDark:
                                        orientation: "vertical"
                                        BoxBgSlight:
                                            BoxBgDark:
                                                Label:
                                                    id: lab_output_title
                                                    font_size: "20sp"
                        BoxBgDark:
                            BoxBgDark:
                                id: box_scr_view
                                ScrollView:
                                    id: scroll_view
                                    do_scroll_y: True
                                BoxBgDark:
                                    id: box_pack_names
                                    orientation: "vertical"
                                    size_hint: (1, None)

            BoxBgDark:
                id: box_bottom
                padding: (2,)
                height: "25sp"
                size_hint: (1, None)
                Logo:
                BoxBgDark:
                BoxBgDark:
                ButRound:
                    id: but_sett
                    width: "150sp"
                    size_hint: (None, 1)
                    on_release: app.change_scr("left", "scr_sett")

