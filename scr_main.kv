<ScrMain>:
    BoxBgDark:
        id: "box_0"
        orientation: "vertical"
        padding: 5,5,5,5
        BoxBgLight:
            id: "box_1"
            orientation: "vertical"
            padding:5,5,5,5
            spacing:5
            BoxBgDark:
                id: "box_title"
                size_hint: (1, 0.1)
                Label:
                    text: "pip Control"
                    font_size: "23sp"

            BoxBgDark:
                id: "box_middle"
                padding: (10,)
                BoxBgLight:
                    padding: (2,)
                    spacing: 2
                    BoxBgDark:
                        id: "box_left"
                        orientation: "vertical"
                        size_hint: (0.3, 1)
                        padding: (2,)
                        spacing: 2
                        BoxBgLight:
                            id: "box_actions"
                            size_hint: (1, 0.075)
                            padding: (2,)
                            BoxBgDark:
                                Label:
                                    id: "lab_actions"
                                    text: "Actions:"
                        B_rounded:
                            id: "but_outdated"
                            text: " pip check outdated"
                            size_hint: (1, 0.075)
                            on_release: app.check_pip_outdated()
                        BoxBgDark:

                    BoxBgDark:
                        id: "box_right"
                        orientation: "vertical"
                        padding: (4,)
                        BoxBgLight:
                            id: "box_packets_title"
                            size_hint: (1, 0.075)
                            padding: (2,)
                            spacing: 2
                            BoxBgDark:
                                orientation: "vertical"
                                Label:
                                    text: "Package"
                            BoxBgDark:
                                size_hint: (0.3, 1)
                                Label:
                                    text: "Version"
                            BoxBgDark:
                                size_hint: (0.3, 1)
                                Label:
                                    text: "Latest"
                            BoxBgDark:
                                size_hint: (0.3, 1)
                                Label:
                                    text: "Type"
                        BoxBgLight:
                            padding: (2,)
                            spacing:2
                            BoxBgDark:
                                Label:
                                    markup: True
                                    text: "Package Name"
                            BoxBgDark:
                                size_hint: (0.3, 1)
                                Label:
                                    text: "Version"
                            BoxBgDark:
                                size_hint: (0.3, 1)
                                Label:
                                    text: "Latest"
                            BoxBgDark:
                                size_hint: (0.3, 1)
                                Label:
                                    text: "Type"

            BoxBgDark:
                padding: (2,)
                size_hint: (1, 0.05)
                BoxBgDark:
                BoxBgDark:
                B_rounded:
                    text: 'Settings'
                    on_release:
                        root.manager.transition.direction = "left"
                        root.manager.current = "scr_sett"

